{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug: List Ports",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/src/cli.ts",
      "args": ["list-ports"],
      "preLaunchTask": "tsc: build - tsconfig.json",
      "outFiles": ["${workspaceFolder}/dist/**/*.js"],
      "sourceMaps": true,
      "resolveSourceMapLocations": [
        "${workspaceFolder}/**",
        "!**/node_modules/**"
      ],
      "console": "integratedTerminal",
      "runtimeExecutable": "${env:HOME}/.nvm/versions/node/v20.11.1/bin/node",
      "runtimeArgs": ["--nolazy"],
      "env": {
        "DEBUG": "true"
      }
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug: Status",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/src/cli.ts",
      "args": [
        "status",
        "-p", "${input:port}",
        "-b", "${input:board}",
        "-s", "${input:slot}"
      ],
      "preLaunchTask": "tsc: build - tsconfig.json",
      "outFiles": ["${workspaceFolder}/dist/**/*.js"],
      "sourceMaps": true,
      "resolveSourceMapLocations": [
        "${workspaceFolder}/**",
        "!**/node_modules/**"
      ],
      "console": "integratedTerminal",
      "runtimeExecutable": "${env:HOME}/.nvm/versions/node/v20.11.1/bin/node",
      "runtimeArgs": ["--nolazy"],
      "env": {
        "DEBUG": "true"
      }
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug: Slots",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/src/cli.ts",
      "args": [
        "slots",
        "-p", "${input:port}",
        "-b", "${input:board}"
      ],
      "preLaunchTask": "tsc: build - tsconfig.json",
      "outFiles": ["${workspaceFolder}/dist/**/*.js"],
      "sourceMaps": true,
      "resolveSourceMapLocations": [
        "${workspaceFolder}/**",
        "!**/node_modules/**"
      ],
      "console": "integratedTerminal",
      "runtimeExecutable": "${env:HOME}/.nvm/versions/node/v20.11.1/bin/node",
      "runtimeArgs": ["--nolazy"],
      "env": {
        "DEBUG": "true"
      }
    }
  ],
  "inputs": [
    {
      "id": "port",
      "type": "promptString",
      "description": "Enter serial port (e.g. /dev/tty.usbserial-BG02020H)",
      "default": "/dev/tty.usbserial-BG02020H"
    },
    {
      "id": "board",
      "type": "promptString",
      "description": "Enter board address (0-4)",
      "default": "0"
    },
    {
      "id": "slot",
      "type": "promptString",
      "description": "Enter slot index (0-5)",
      "default": "0"
    }
  ]
} 